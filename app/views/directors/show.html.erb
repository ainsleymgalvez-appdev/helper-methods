<div>
  <div>
    <h1>
      Director #<%= @director.id %> details
    </h1>

    <div>
      <div>
        <%= link_to "Go back", directors_path %>
      </div>

      <div>
        <%= link_to "Edit director", edit_director_path(@director) %>
      </div>

      <div>
        <a href="<%= director_path(@director)%>" data-method="delete">
          Delete movie
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      
      <dd>
        <%= @director.name %>
      </dd>

      <dt>
        Date of Birth
      </dt>
      
      <dd>
        <%= @director.dob %>
      </dd>

      <dt>
        Created At
      </dt>
      
      <dd>
        <%= time_ago_in_words(@director.created_at) %> ago
      </dd>

      <dt>
        Updated At
      </dt>
      
      <dd>
      <%= time_ago_in_words(@director.updated_at) %> ago
      </dd>
    </dl>

  </div>
</div>